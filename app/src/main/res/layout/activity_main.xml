<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/text_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/splash_screen1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_player1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_logo"/>

    <TextView
        android:id="@+id/txt_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_logo"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/batu_player1"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Batu"
        android:src="@mipmap/batu"
        app:layout_constraintEnd_toEndOf="@+id/txt_player1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_player1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gunting_player1"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Gunting"
        android:src="@mipmap/gunting"
        app:layout_constraintEnd_toEndOf="@+id/batu_player1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/batu_player1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/kertas_player1"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:contentDescription="kertas"
        android:src="@mipmap/kertas"
        app:layout_constraintEnd_toEndOf="@+id/gunting_player1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gunting_player1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/batu_player2"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="Batu"
        android:src="@mipmap/batu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_player2"
        app:layout_constraintTop_toBottomOf="@+id/txt_player2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gunting_player2"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="Gunting"
        android:src="@mipmap/gunting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/batu_player2"
        app:layout_constraintTop_toBottomOf="@+id/batu_player2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/kertas_player2"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="kertas"
        android:src="@mipmap/kertas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gunting_player2"
        app:layout_constraintTop_toBottomOf="@+id/gunting_player2" />




</androidx.constraintlayout.widget.ConstraintLayout>